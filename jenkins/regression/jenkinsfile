pipeline {
    agent any
    // parameters {
    //     string(name: 'BRANCH_ID', defaultValue: '', description: 'Enter branch ID')
    // }

    stages {
        stage('Checkout') {
            // steps {
            //     git branch: '${BRANCH_ID}', url: 'https://github.com/IdenHuang/testRepo.git'
            // }
            steps {
                git branch: "${env.BRANCH_NAME}",
                url: 'https://github.com/IdenHuang/testRepo.git',
                credentialsId: 'github-token-id'
            }
        }
        stage('Run Test') {
            steps {
                sh "python3 test_orchestrator.py --regression"
            }
        }
        
        stage('Check console output') {
            steps {
                script {
                    def output = sh(
                        script: "python3 test_orchestrator.py --regression",
                        returnStdout: true
                    ).trim()
                    if (output.contains('failed')) {
                        error('test failed')
                    }
                }
            }
        }
    }
}
