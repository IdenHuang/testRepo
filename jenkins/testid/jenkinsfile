pipeline {
    agent any
    parameters {
        string(name: 'TEST_ID', defaultValue: '', description: 'Enter test ID')
        string(name: 'BRANCH_ID', defaultValue: '', description: 'Enter branch ID')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: '${BRANCH_ID}', url: 'https://github.com/IdenHuang/testRepo.git'
            }
        }

        stage('Run Test') {
            steps {
                sh "python3 test_orchestrator.py --test-id ${params.TEST_ID}"
            }
        }
        
        stage('Check console output') {
            steps {
                script {
                    def output = sh(
                        script: "python3 test_orchestrator.py --test-id ${TEST_ID}",
                        returnStdout: true
                    ).trim()
                    if (output.contains('failed')) {
                        error('test failed')
                    }
                }
            }
        }
    }
}
